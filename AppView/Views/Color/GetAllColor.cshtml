@model IEnumerable<Nhom1_Pro.Models.Color>

@{
    ViewData["Title"] = "GettAllColor";
}

<h1>GettAllColor</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form class="d-flex" role="search">
    <div style="display:flex">
        <button class="logo" value="Tìm kiếm" width="20px" style="border:none;color:white;background-color:black" ; type="submit">Tìm kiếm</button>
        @Html.TextBox("search", "", new { @class = "form-control me-2", @type = "search" })
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
