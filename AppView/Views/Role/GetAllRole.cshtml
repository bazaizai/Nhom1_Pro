@model IEnumerable<Nhom1_Pro.Models.Role>

@{
    ViewData["Title"] = "GetAllSanPham";
}

<h1>GetAllRole</h1>

<p>
    <a asp-controller="Role" asp-action="Create">Create New</a>
</p>
<form class="d-flex" role="search">
    <div style="display:flex">
        <button class="logo" style="border:none;background-color:black;color:white" type="submit">Tìm</button>
        @Html.TextBox("sreach","",new{@class="form-control me-2",@type="sreach"})
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
