                    <div style="margin-top: 10px">
                        <label for="formGroupExampleInput">Mô tả </label>
                        <textarea rows="4" id="MoTa" type="text" class="form-control" placeholder="" asp-for="BaoHanh"></textarea>
                    </div>
                </div>

